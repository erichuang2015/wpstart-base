{% extends 'layout-container.twig' %}

{% block header %}
	<h1>Search Results</h1>
{% endblock %}

{% block content %}
	<section class="event-results">
		<h2 class="h4 mb-3">Events Matching "{{ request.get.s }}"</h2>
		{% if events|length > 0 %}
			<div class="row">
				{% for event in events %}
					<div class="col-md-6 col-lg-4">
						{% include 'components/_event-card.twig' %}
					</div>
				{% endfor %}
			</div>
		{% else %}
			<p>No current events were found.</p>
		{% endif %}
	</section>
	{% if posts|length > 0 %}
		<aside class="general-results">
			<h4 class="mb-3">More Results</h4>
			<div class="row">
				{% for post in posts %}
					<div class="col-md-6">
						<div class="card" data-card-link="{{ post.link }}">
							<div class="card-body">
								<h5 class="card-title">
									<a href="{{ post.link }}">{{ post.post_title }}</a>
								</h5>
								{{ post.get_preview(50) }}
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</aside>
	{% endif %}
{% endblock %}
