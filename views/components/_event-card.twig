<div class="card event-card" data-card-link="{{ event.crowdblink_portal_url }}">
	<a href="{{ event.crowdblink_portal_url }}" class="event-image" style="background-image: url('{{ event.event_image ? event.event_image : '/wp-content/themes/crowdblink/images/default-thumbnail.jpg' }}');">
		<span class="event-date">
			<span class="date">
				<span class="day">{{ event.event_start_date|date('d') }}</span>
				<span class="month">{{ event.event_start_date|date('M') }}</span>
			</span> 
			{% if event.event_end_date != '' and event.event_end_date != event.event_start_date %}
				- 
				<span class="date">
					<span class="day">{{ event.event_end_date|date('d') }}</span>
					<span class="month">{{ event.event_end_date|date('M') }}</span>
				</span>
			{% endif %}
		</span>
	</a>
	<div class="card-body">
		<h3 class="event-title">
			<a href="{{ event.crowdblink_portal_url }}">
				{{ event.post_title }}
			</a>
		</h3>
		<span class="event-location">
			{{ event.event_location != '' or event.event_region != '' ? '<i class="fas fa-map-marker-alt"></i> ' }}
			{{ event.event_location }}
			{{ event.event_location and event.event_region ? ', ' }}
			{{ event.event_region }}
		</span>
		<span class="event-price">
			{{ event.event_price != '' ? '<i class="fas fa-ticket-alt"></i> ' }}
			{{ event.event_price }}
		</span>
	</div>
</div>